#!/bin/sh
set -e
chown -h -R 0:0 /home/erion/Projects/buildroot/output/build/buildroot-fs/ext2/target
chown -h -R 100:101 '/home/erion/Projects/buildroot/output/build/buildroot-fs/ext2/target//var/empty'
/home/erion/Projects/buildroot/output/host/bin/makedevs -d /home/erion/Projects/buildroot/output/build/buildroot-fs/full_devices_table.txt /home/erion/Projects/buildroot/output/build/buildroot-fs/ext2/target
   	rm -rf /home/erion/Projects/buildroot/output/build/buildroot-fs/ext2/target/usr/lib/udev/hwdb.d/ /home/erion/Projects/buildroot/output/build/buildroot-fs/ext2/target/etc/udev/hwdb.d/
find /home/erion/Projects/buildroot/output/build/buildroot-fs/ext2/target/run/ -mindepth 1 -prune -print0 | xargs -0r rm -rf --
find /home/erion/Projects/buildroot/output/build/buildroot-fs/ext2/target/tmp/ -mindepth 1 -prune -print0 | xargs -0r rm -rf --
   
   
   	rm -f /home/erion/Projects/buildroot/output/images/rootfs.ext2
	/home/erion/Projects/buildroot/output/host/sbin/mkfs.ext4 -d /home/erion/Projects/buildroot/output/build/buildroot-fs/ext2/target -r 1 -N 0 -m 5 -L "rootfs" -I 256 -O ^64bit /home/erion/Projects/buildroot/output/images/rootfs.ext2 "120M" || { ret=$?; echo "*** Maybe you need to increase the filesystem size (BR2_TARGET_ROOTFS_EXT2_SIZE)" 1>&2; exit $ret; }
